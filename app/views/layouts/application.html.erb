<!DOCTYPE html>
<html>
<head>
  <title>Shoedazzle</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <% if current_user %>
    <%=link_to "Logout", destroy_user_session_path %>
  <% end %>
</header>

<div>
  <% if notice %>
    <%= notice %>
  <% end %>
  <% if alert %>
    <%= alert %>
  <% end %>
</div>

  <div>
    <%= yield %>
  </div>
</body>
</html>
