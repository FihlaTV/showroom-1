<div class="control-group">
  <%= form.label :name, :class => "control-label" %>
  <div class="controls">
    <%= form.text_field :name, :class => "input-xlarge" %>
  </div>
</div>
<div class="control-group">
  <%= form.label :description, :class => "control-label" %>
  <div class="controls">
    <%= form.text_area :description, :cols => 50, :rows => 10 %>
  </div>
</div>
<div class="control-group">
  <%= form.label :price, :class => "control-label" %>
  <div class="controls">
    <%= form.text_field :price, :class => "input-xlarge" %>
  </div>
</div>
<div class="control-group">
  <%= form.label :image, :class => "control-label" %>
  <div class="controls">
    <%= image_tag(form.object.image.thumb.url) if !form.object.new_record? && form.object.image? %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>
</div>
<div class="control-group">
  <%= form.submit (form.object.new_record? ? "Add" : "Update"), :class => "btn btn-primary" %>
</div>
