<h1>Products</h1>

<%= link_to "Add product", new_product_path %>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%=link_to product.name, product_path(product) %></td>
        <td><%=link_to "Edit", edit_product_path(product) %></td>
        <td><%=link_to "Delete", product_path(product), :confirm => "Are you sure?", :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @products %>