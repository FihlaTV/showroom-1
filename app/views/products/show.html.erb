<h1><%=@product.name%></h1>

<h3>Description</h3>
<p>
  <%= @product.description %>
</p>
<h3>Price</h3>
<p>
  <%= number_to_currency(@product.price) %>
</p>
<% if @product.image? %>
<h3>Image</h3>
<p>
  <%= image_tag(@product.image.thumb.url) %>
</p>
<% end %>

<%=link_to "Back", products_path %> | <%=link_to "Edit", edit_product_path(@product) %> | <%=link_to "Delete", product_path(@product), :confirm => "Are you sure?", :method => :delete %>