<div class="page-header">
  <h1>Your Showroom</h1>
</div>

<div class="row">
  <div class="span12">
    <ul class="thumbnails">
      <% @showroom.products.ordered.each do |product| %>
        <li class="span3">
          <%= link_to showroom_product_path(id: product.id), :class => "thumbnail" do %>
            <% present product do |product_presenter| %>
              <%= product_presenter.thumbnail %>
              <h3><%=product_presenter.name%></h3>
            <% end %>
          <% end %>
        </li>
      <% end if @showroom.products.count > 0 %>
    </ul>
  </div>
</div>