<div class="page-header">
  <h1><%=@user.email%> | <%=link_to "Back", users_path %></h1>
</div>

<%=link_to "Back", users_path %> | <%=link_to "Edit", edit_user_path(@user) %> | <%=link_to "Delete", user_path(@user), :confirm => "Are you sure?", :method => :delete %>

<h2>Showrooms</h2>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Created_at</th>
      <th>Products</th>
    </tr>
  </thead>
  <tbody>
    <% @user.showrooms.ordered.each do |showroom| %>
      <tr class="active">
        <td><%= showroom.id %></td>
        <td><%= showroom.created_at.to_s(:date_only) %></td>
        <td>
          <table class="table table-striped">
            <tbody>
              <% showroom.products.ordered.each do |product| %>
                <tr>
                  <td><%=link_to product.name, product_path(product) %></td>
                </td>
              <% end %>
            </tbody>
          </table>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>